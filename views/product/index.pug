extends ../layouts/common.pug
block content 

    .row
        ul.list-group.shadow
            if products
                each product in products
                    li
                        .media.align-items-lg-center.flex-column.flex-lg-row.p-3
                        .media-body.order-2.order-lg-1
                        h5.mt-0.font-weight-bold.mb-2= product.name
                        p.font-italic.text-muted.mb-0.small= product.description
                        .d-flex.align-items-center.justify-content-between.mt-1
                            h6.font-weight-bold.my-2= product.price
                            ul.list-inline.small
                            li.list-inline-item.m-0
                                i.fa.fa-star.text-success
                            li.list-inline-item.m-0
                                i.fa.fa-star.text-success
                            li.list-inline-item.m-0
                                i.fa.fa-star.text-success
                            li.list-inline-item.m-0
                                i.fa.fa-star.text-success
                            li.list-inline-item.m-0
                                i.fa.fa-star-o.text-gray
                        img.ml-lg-5.order-1.order-lg-2(src=product.image)
    
    nav(aria-label='...')
        ul.pagination
            li.page-item.disabled
                a.page-link(href='#', tabindex='-1') Previous
            li.page-item
                a.page-link(href='#')= showedPaginationIndexes[0]
            li.page-item{?showedPaginationIndexes[1] == currentPage'.active':''}
                a.page-link(href='#')= showedPaginationIndexes[1]
            li.page-item
                a.page-link(href='#')= showedPaginationIndexes[2]
            li.page-item
                a.page-link(href='#') Next


